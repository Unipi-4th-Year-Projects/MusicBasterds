@page "/welcome"
@inject NavigationManager Nav

<div class="text-center mt-5">
    <h1 class="display-4 fw-bold">🎸 Welcome to MusicBasterds</h1>
    <p class="lead mt-3">Share and discover the best music albums with fellow enthusiasts.</p>

    <div class="mt-4">
        <button class="btn btn-primary me-2" @onclick="GoToLogin">Login</button>
        <button class="btn btn-outline-secondary" @onclick="GoToRegister">Sign Up</button>
    </div>
</div>

@code {
    private void GoToLogin() => Nav.NavigateTo("/login");
    private void GoToRegister() => Nav.NavigateTo("/register");
}
